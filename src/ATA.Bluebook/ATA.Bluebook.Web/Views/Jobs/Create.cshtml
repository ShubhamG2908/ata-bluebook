@model StepperPageModel

@{
	List<BreadCrumbModel> breadCrumbModel = new() {
		new BreadCrumbModel("Jobs", "Jobs", "Index"),
		new BreadCrumbModel("Add Job").SetActive(),
	};
}

<div class="container">
	<div class="mt-3 px-2">
		@(await Html.PartialAsync("_BreadCrumb", breadCrumbModel))
	</div>
	<div class="main-body-margin-bottom">
		<div class="mt-3">
			<div class="card shadow bg-body-tertiary rounded">
				<div class="card-body">
					<div class="col">
						@(await Html.PartialAsync("_StepperForm", Model))
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="~/js/Jobs.v1.0.js"></script>