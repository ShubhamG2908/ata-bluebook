@{
	List<BreadCrumbModel> breadCrumbModel = new() {
		new BreadCrumbModel("Jobs").SetActive()
	};
}

<div class="container">
	<div class="mt-3 px-2">
		@(await Html.PartialAsync("_BreadCrumb", breadCrumbModel))
	</div>
	<div class="mt-3 main-body-margin-bottom">
		<div class="card shadow bg-body-tertiary rounded">
			<div class="card-body">
				<div class="d-flex justify-content-end">
					@(Html.DevExtreme().AddCustomButton(buttonText: "Add Job", clickHandler: "() => {window.location.href = '" + @Url.Action("Create", "Jobs") + "'}", icon: "plus", rtlEnable: true))
				</div>
				<div>
					<h4>
						The job listing grid will be here.
					</h4>
				</div>
			</div>
		</div>
	</div>
</div>