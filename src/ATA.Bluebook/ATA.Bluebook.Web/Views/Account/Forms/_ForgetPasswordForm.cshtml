@using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post))
{
	@(
	Html.DevExtreme()
					.Form<ForgetPasswordModel>()
															.Items(item =>
															{
																item.AddCustomFormTextBox(m => m.Username);
																item.AddCustomFormHyperLink("/Account/index", "Back to login");
																item.AddCustomFormButton("Send Email", "100%", canSubmitForm: true);
															}).FormData(Model)
)
}