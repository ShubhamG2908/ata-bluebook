@using (Html.BeginForm("forget-password", "Account", FormMethod.Post))
{
	@(
		Html.DevExtreme()
							.Form<ChangePasswordModel>()
															.OnInitialized("onInitialized")
																.Items(item =>
																{
																	item.AddCustomFormPassword(m => m.Password);
																		item.AddCustomFormPassword(m => m.ConfirmPassword, "ConfirmPassword", "hide-show-confirm-password-btn");
																	item.AddCustomFormButton("Confrim", "100%", canSubmitForm: true);
																}).FormData(Model)
	)
}
<script src="~/js/Account.js"></script>