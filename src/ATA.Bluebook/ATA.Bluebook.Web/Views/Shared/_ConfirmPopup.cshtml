@model ConfirmPopupModel

<div class="text-center custom-delete-popup-container">
	<div>
		<div class="my-2">
			<span class="dx-icon dx-icon-@Model.IconName @Model.IconClass"></span>
		</div>
		<h4 class="my-3">@Model.Title</h4>
		<p class="mb-4">@Model.Text</p>
		<div class="text-center mt-3">
			<span class="me-3">
				@Html.DevExtreme().AddCustomButton(Model.CancelButtonText, Model.CancelButtonType, Model.CancelButtonClickCallback)
			</span>
			@Html.DevExtreme().AddCustomButton(Model.OkButtonText, Model.OkButtonType, Model.OkButtonClickCallback)
		</div>
	</div>
</div>