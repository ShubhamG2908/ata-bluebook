@model StepperPageModel
<div id="@Model.StepperId" class="bs-stepper">
    <div class="bs-stepper-header" role="tablist">
        @{
            for (int i = 0; i < Model.Steps.Count; i++)
            {
                <div class="step" data-target="#step-l-@(i + 1)">
                    <button type="button" class="btn btn-link step-trigger" role="tab" id="@(string.Concat(Model.StepperId, "trigger", i + 1))" aria-controls="test-l-@(i + 1)">
                        <span class="bs-stepper-circle">@(i + 1)</span>
                        <span class="bs-stepper-label">@(Model.Steps[i].Label)</span>
                    </button>
                </div>
                if (i != Model.Steps.Count - 1)
                {
                    <div class="line"></div>
                }
            }
        }
    </div>
    <div class="bs-stepper-content">
        @{
            for (int i = 0; i < Model.Steps.Count; i++)
            {
                <div class="content" role="tabpanel" id="step-l-@(i + 1)" aria-labelledby="@(string.Concat(Model.StepperId, "trigger", i + 1))">
                    <partial name="@(Model.Steps[i].FormName)" model="Model.PageModel"></partial>
                </div>
            }
        }
    </div>
</div>

<script>
    let stepper;

    $(document).ready(function () {
      stepper = new Stepper(document.querySelector("#@Model.StepperId"));
    });
</script>
